{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/big-pickle",
  "permission": {
    "skill": {
      "*": "allow"
    },
    "file": {
      "read": "allow",
      "write": "allow"
    },
    "shell": "allow"
  },
  "theme": "catppuccin-mocha",

  "lsp": {
    "pyright": {
      "disabled": true
    },
    "custom-python-lsp": {
      "command": ["python", ".opencode/lsp/custom_lsp_server.py"],
      "extensions": [".py"]
    }
  },

  "mcp": {
    "workspace-tools": {
      "type": "local",
      "command": ["python", ".opencode/mcp-servers/workspace-tools/server.py"],
      "enabled": true,
      "timeout": 30000
    }
  }
}
