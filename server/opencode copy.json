{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-5.2",
  "permission": {
    "skill": {
      "*": "allow"
    },
    "file": {
      "read": "allow",
      "write": "allow"
    },
    "shell": "allow"
  },
  "theme": "catppuccin-mocha",

  "mcp": {
    "workspace-tools": {
      "type": "local",
      "command": ["/opt/venv/bin/python", "/workspace/.opencode/mcp-servers/workspace-tools/server.py"],
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "enabled": true
    }
  },

  "lsp": {
    "pyright": {
      "disabled": false,
      "command": ["pyright-langserver", "--stdio"],
      "extensions": [".py", ".pyi"],
      "initialization": {
        "python": {
          "pythonPath": "/opt/venv/bin/python"
        }
      }
    }
  }

 
}
